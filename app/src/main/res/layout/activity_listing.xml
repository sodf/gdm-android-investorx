<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ListingsActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar" />

    <fragment
        android:id="@+id/fragment_listings_header"
        android:name="gdm.android.investorx.ListingsHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:elevation="6dp"
        tools:layout="@layout/fragment_listings_header" />

    <fragment
        android:id="@+id/fragment_internallist"
        android:name="gdm.android.investorx.InternalFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_listings" />

    <fragment
        android:id="@+id/fragment_publiclist"
        android:name="gdm.android.investorx.PublicFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_listings" />

    <fragment
        android:id="@+id/fragment_listings_footer"
        android:name="gdm.android.investorx.ListingsFooterFragment"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:elevation="6dp"
        tools:layout="@layout/fragment_listings_footer" />

</LinearLayout>
